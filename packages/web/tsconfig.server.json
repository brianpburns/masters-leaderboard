{
  "include": ["src/server", "src/shared"],
  "exclude": ["node_modules", "dist", "src/client"],
  "compilerOptions": {
    "module": "commonjs",
    "target": "esnext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "./dist",
    "moduleResolution": "node",
    "sourceMap": true,
    "baseUrl": "./"
  },
  "compileOnSave": true
}
