{
  "name": "masters-leaderboard",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "start": "webpack serve --config webpack/dev.config.ts",
    "start:standalone": "npm run start -- --env standalone=true",
    "server": "NODE_ENV=development ts-node-dev --project tsconfig.server.json src/server/index.ts",
    "server:prod": "NODE_ENV=production node dist/server/index.js",
    "build:prod": "npm run build:server; npm run build:ui",
    "build:server": "NODE_ENV=production tsc --project tsconfig.server.json",
    "build:ui": "webpack --config webpack/prod.config.ts",
    "deploy": "git push heroku main",
    "check-types": "tsc --noEmit && tsc --project tsconfig.server.json --noEmit",
    "lint": "npm run lint:prettier && npm run lint:eslint",
    "test": "jest",
    "tests": "npm run test",
    "test:coverage": "npm run test -- --coverage",
    "render:startup": "npm ci; npm run build:prod"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/brianpburns/masters-leaderboard.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/brianpburns/masters-leaderboard/issues"
  },
  "homepage": "https://github.com/brianpburns/masters-leaderboard#readme",
  "dependencies": {},
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.21.0",
    "@typescript-eslint/parser": "^4.21.0",
    "eslint": "^7.23.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-import-resolver-babel-module": "^5.2.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest-dom": "^3.7.0",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react": "^7.23.1",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-testing-library": "^3.10.2",
    "prettier": "^2.4.1",
    "typescript": "^4.6.3"
  },
  "msw": {
    "workerDirectory": "public"
  },
  "workspaces": [
    "packages/web"
  ]
}
